<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_PosterProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:src="@drawable/ic_profile"
        android:background="@drawable/custom_btn_conrnered_edge"/>
    <TextView
        android:id="@+id/tv_posterID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FitQuest"
        android:textColor="@color/bgBlack"
        android:fontFamily="@font/segoe_ui_bold"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/iv_PosterProfilePic"
        android:layout_marginTop="16dp">
    </TextView>
    <TextView
        android:id="@+id/tv_postAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feeds in Beta Mode"
        android:textColor="@color/TxtGray"
        android:fontFamily="@font/segoe_ui_bold"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/iv_PosterProfilePic"
        android:layout_below="@+id/tv_posterID"
        android:layout_marginTop="4dp">
    </TextView>

    <ImageView
        android:id="@+id/iv_PostImage"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/iv_PosterProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_btn_conrnered_edge"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_profile"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_posterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/iv_PostImage"
        android:text="this text box is a test text box to see how text would apear in someone's post. this text box is a test text box to see how text would apear in someone's post. this text box is a test text box to see how text would apear in someone's post. this text box is a test text box to see how text would apear in someone's post. this text box is a test text box to see how text would apear in someone's post. "
        android:textColor="@color/bgBlack"
        android:fontFamily="@font/segoe_ui"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_posterTxt"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/rl_likes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_likes"
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@android:drawable/star_off"/>
            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/iv_likes"
                android:layout_marginStart="4dp"
                android:text="19"
                android:textColor="@color/TxtGray"
                android:fontFamily="@font/segoe_ui"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_commentBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/iv_comments"
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@android:drawable/ic_menu_sort_by_size" />
            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/iv_comments"
                android:layout_marginStart="4dp"
                android:text="19"
                android:textColor="@color/TxtGray"
                android:fontFamily="@font/segoe_ui"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>